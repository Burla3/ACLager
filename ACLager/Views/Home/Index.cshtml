@model ACLager.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    @for (int i = 0; i < Model.HomeMenuBlocks.Count; i++) {

        <div class="col-sm-6 col-md-4">
            <div class="panel panel-primary link clickable" data-href="@Url.Action(Model.HomeMenuBlocks[i].Action, Model.HomeMenuBlocks[i].Controller)">
                <div class="panel-heading background-override-@Model.HomeMenuBlocks[i].Color">
                    <h2 class="panel-title-freesize">
                        @Model.HomeMenuBlocks[i].Title
                    </h2>
                </div>
                <div class="panel-body">
                    @Model.HomeMenuBlocks[i].Description
                </div>
            </div>
        </div>


        if ((i + 1) % 2 == 0 && (i + 1) % 3 == 0) {
            <div class="clearfix visible-sm-block visible-md-block visible-lg-block"></div>
        } else if ((i + 1) % 2 == 0) {
            <div class="clearfix visible-sm-block"></div>
        } else if ((i + 1) % 3 == 0) {
            <div class="clearfix visible-md-block visible-lg-block"></div>
        }
    }
</div>











