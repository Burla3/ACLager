@model ACLager.ViewModels.ItemTypeViewModel

@{
    ViewBag.Title = "Rediger varetype";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container panel">
    <div class="row">
        @using (Html.BeginForm("AddSubmitAction", "ItemType"))
