@model ACLager.ViewModels.ItemTypeViewModel

<div class="col-sm-6">
    <div class="row">
        <div class="col-md-11">
            <div class="form-group label-floating">
                @Html.LabelFor(model => model.ItemType.Name, htmlAttributes: new { @class = "control-label" }, labelText: "Navn")
                @Html.EditorFor(model => model.ItemType.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemType.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-11">
            <div class="form-group label-floating row">
                @Html.LabelFor(model => model.ItemType.BatchSize, htmlAttributes: new { @class = "control-label" }, labelText: "Færdigprodukt per produktionsgang")
                @Html.EditorFor(model => model.ItemType.BatchSize, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemType.BatchSize, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ItemType.Department, "Afdeling", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.ItemType.Department, Model.DepartmentSelectListItems, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-default noselect" data-container="body" data-toggle="popover" data-placement="top" data-content="Skabes der nye vare af denne type i pakkeriet eller i produktionen?">
                <i class="material-icons">help</i>
            </button>
        </div>
    </div>
</div>
<div class="col-sm-6">
    <div class="row">
        <div class="col-md-11">
            <div class="form-group">
                @Html.LabelFor(model => model.ItemType.Unit, "Enhed", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.ItemType.Unit, Model.UnitSelectListItems, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-11">
            <div class="form-group">
                @Html.LabelFor(model => model.ItemType.MinimumAmount, "Mindste mængde", new {@class = "control-label"})
                @Html.EditorFor(model => model.ItemType.MinimumAmount, new {htmlAttributes = new {@class = "form-control", @placeholder = "Notits sendes ved lagerbeholdning under dette."}})
                @Html.ValidationMessageFor(model => model.ItemType.MinimumAmount, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-11">
            <div class="form-group label-floating">
                @Html.LabelFor(model => model.ItemType.Barcode, "Stregkode", new { @class = "control-label" })
                @Html.EditorFor(model => model.ItemType.Barcode, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.ItemType.Barcode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>