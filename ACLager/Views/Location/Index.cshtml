@using ACLager.CustomClasses
@using ACLager.Models
@model ACLager.ViewModels.LocationViewModel

@{
    ViewBag.Title = "Lokationer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="locationSort">
    @Html.Partial("_SearchPanel")

    <div class="container">
        <div class="row">
            <div class="sort noselect col-xs-2" data-sort="sort-status">
                <strong>Status</strong>
                    <br>
                    <span class="label label-default">Klik for at sortere</span>
                    <span class="label label-primary asc">Sorteret stigende</span>
                    <span class="label label-primary desc">Sorteret faldende</span>
                    <br>
            </div>
            <div class="sort noselect col-xs-2" data-sort="sort-name">
                <strong>Navn</strong>
                    <br>
                    <span class="label label-default">Klik for at sortere</span>
                    <span class="label label-primary asc">Sorteret stigende</span>
                    <span class="label label-primary desc">Sorteret faldende</span>
                    <br>
            </div>
            <div class="sort noselect col-xs-2" data-sort="sort-empty">
                <strong>Ledig/Optaget</strong>
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
    <div class="container list" id="ExpansionPanelsContainer">
            @foreach (ItemLocationPair itemLocationPair in Model.ItemLocationPairs) {
                <div class="expansionpanel row panel">
                    <div class="row">
                        <div class="col-xs-3 sort-status">
                            <h4>
                                @if (itemLocationPair.Location.IsActive)
                                {
                                    <span class="label label-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="label label-default">Inaktiv</span>
                                }
                            </h4>
                        </div>
                        <div class="col-xs-2 sort-name">
                            <h4>@itemLocationPair.Location.Name</h4>
                        </div>
                        <div class="col-xs-2 sort-empty">
                            <h4>
                                @if (itemLocationPair.Item == null) {
                                    <span class="label label-success">Ledig</span>
                                } else {
                                    <span class="label label-default">Optaget</span>
                                }
                            </h4>
                        </div>
                        <div class="expansion-control col-sm-5" data-expandmaxheight="100px" data-expandtarget="#ExpansionContentContainer_@itemLocationPair.Location.UID">
                            <div class="btn btn-default pull-right">
                                <i class="material-icons">expand_more</i>
                                <i class="material-icons hidden">expand_less</i>
                            </div>
                        </div>
                    </div>
                    <div class="row expansion-content" id="ExpansionContentContainer_@itemLocationPair.Location.UID">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">

                            <a href="@Url.Action("DeleteLocation", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-danger pull-right">Slet</a>
                            <a href="@Url.Action("EditLocation", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-info pull-right">Rediger</a>
                            <a href="@Url.Action("Detailed", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-primary pull-right">Mere info</a>

                        </div>
                    </div>
                </div>
            }
    </div>
</div>

<div class="fixed-button-container">
    <div class="btn btn-success btn-fab btn-flowout btn-page-flowout-up" data-content-element="#AddLocationFormPanel">
        <i class="material-icons normal">add circle</i>
        <i class="material-icons flowing hidden">close</i>
    </div>
</div>

<div class="flow-content flowout-close" id="LocationInlineInfoAndFormPanel">
    <div class="container"></div>
</div>

<div class="flow-content flowout-close" id="AddLocationFormPanel">
    <div class="container">

        <div class="row">
            <div class="col-md-3"></div>

            <div class="col-md-6">
                <div class="panel panel-success flowout-noclose">
                    <div class="panel-heading">
                        <h3 class="panel-title"> <br></h3>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("_CreateLocation")
                    </div>
                </div>

            </div>

            <div class="col-md-3"></div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function() {

        var options = {
            valueNames: ['sort-status', 'sort-name', 'sort-empty']
        };

        var userList = new List('locationSort', options);

    });
</script></div>

