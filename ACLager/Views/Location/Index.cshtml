@using ACLager.CustomClasses
@using ACLager.Models
@model ACLager.ViewModels.LocationViewModel

@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="locationSort">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 panel">
            <form class="bs-component">
                <div class="form-group form-group-lg label-floating">

                    <div class="input-group">
                        <label class="control-label" for="MainFilterAndSearchField">Skriv for at søge i tabellen nedenfor</label>
                        <input type="text" id="MainFilterAndSearchField" class="form-control search">
                        <span class="input-group-btn">
                            <div class="btn btn-primary btn-raised" type="button">
                                <i class="material-icons">search</i> Scan til søgning
                            </div>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="container">
        <div class="row">
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-status">
                Status
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-name">
                Navn
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-empty">
                Ledig/Optaget
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="col-sm-2">
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
    <div class="container list" id="ExpansionPanelsContainer">
            @foreach (ItemLocationPair itemLocationPair in Model.ItemLocationPairs) {
                <div class="expansionpanel row panel">
                    <div class="row">
                        <div class="col-sm-3 sort-status">
                            @if (itemLocationPair.Location.IsActive) {
                                <span class="label label-success">Aktiv</span>
                            } else {
                                <span class="label label-default">Inaktiv</span>
                            }
                        </div>
                        <div class="col-sm-3 sort-name">
                            @itemLocationPair.Location.Name
                        </div>
                        <div class="col-sm-2 sort-empty">
                            @if (itemLocationPair.Item == null) {
                                <span class="label label-success">Ledig</span>
                            } else {
                                <span class="label label-default">Optaget</span>
                            }
                        </div>
                        <div class="col-sm-2">
                            
                        </div>
                        <div class="expansion-control col-sm-2" data-expandmaxheight="100px" data-expandtarget="#ExpansionContentContainer_@itemLocationPair.Location.UID">
                            <div class="btn btn-default pull-right">
                                <i class="material-icons">expand_more</i>
                                <i class="material-icons hidden">expand_less</i>
                            </div>
                        </div>
                    </div>
                    <div class="row expansion-content" id="ExpansionContentContainer_@itemLocationPair.Location.UID">
                        <div class="col-sm-2 sort-supplier">
                           
                        </div>
                        <div class="col-sm-2">

                        </div>
                        <div class="col-sm-3">

                        </div>
                        <div class="col-sm-5">

                            <a href="@Url.Action("Detailed", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-primary">Mere info</a>
                            <a href="@Url.Action("EditLocation", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-info">Rediger</a>
                            <a href="@Url.Action("DeleteLocation", new {id = itemLocationPair.Location.UID})" class="btn btn-raised btn-danger">Slet</a>

                        </div>
                    </div>
                </div>
            }
    </div>
</div>

<div class="fixed-button-container">
    <div class="btn btn-success btn-fab btn-flowout btn-page-flowout-up" data-content-element="#AddLocationFormPanel">
        <i class="material-icons normal">add circle</i>
        <i class="material-icons flowing hidden">close</i>
    </div>
</div>

<div class="flow-content flowout-close" id="LocationInlineInfoAndFormPanel">
    <div class="container"></div>
</div>

<div class="flow-content flowout-close" id="AddLocationFormPanel">
    <div class="container">

        <div class="row">
            <div class="col-md-3"></div>

            <div class="col-md-6">
                <div class="panel panel-success flowout-noclose">
                    <div class="panel-heading">
                        <h3 class="panel-title"> <br></h3>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("_CreateLocation")
                    </div>
                </div>

            </div>

            <div class="col-md-3"></div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function() {

        var options = {
            valueNames: ['sort-status', 'sort-name', 'sort-empty']
        };

        var userList = new List('locationSort', options);

    });
</script>

