@using ACLager.Models
@model ACLager.ViewModels.LogViewModel

@{
    ViewBag.Title = "Detailed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container panel">
    <div class="row">
        <div class="col-sm-4">
            <a href="@Url.Action("Index")" class="btn btn-default pull-left"><i class="material-icons">arrow_back</i>Tilbage til "Aktivitets historik"</a>
        </div>
        <div class="col-sm-8">
            <h3 class="text-center">Detaljer om Log</h3>
        </div>
    </div>

    @{ User user = Json.Decode<User>(Model.LogEntry.ObjectData);}

    <div class="clearfix"></div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => user.UID):</dt>
                <dd>@user.UID</dd>
                <dt>@Html.DisplayNameFor(model => user.Name):</dt>
                <dd>@user.Name</dd>
                <dt>@Html.DisplayNameFor(model => user.IsActive):</dt>
                <dd>
                    @if (user.IsActive) {
                        <span class="label label-success">Aktiv</span>
                    } else {
                        <span class="label label-default">Inaktiv</span>
                    }
                </dd>
                <dt>@Html.DisplayNameFor(model => user.IsAdmin):</dt>
                <dd>
                    @if (user.IsAdmin) {
                        <span class="label label-success">Administrator</span>
                    } else {
                        <span class="label label-default">Almindelig bruger</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>