@model ACLager.ViewModels.UserViewModel

@{
    ViewBag.Title = "Detailed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container panel">
    <div class="row">
        <div class="col-sm-4">
            <a href="@Url.Action("Index")" class="btn btn-default pull-left"><i class="material-icons">arrow_back</i>Tilbage til "Brugere"</a>
        </div>
        <div class="col-sm-4">
            <h3 class="text-center">Detailed</h3>
        </div>
        <div class="col-sm-4">

        </div>
    </div>
    
    
    <div class="clearfix"></div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <small>Brugerens navn:</small>
            <h1>@Model.User.Name</h1>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-6">
                <small>Brugernummer:</small> <h3>@Model.User.UID</h3>
            </div>
            <div class="col-sm-6">
                <small>PIN-kode til login</small> <h3>@Model.User.PIN</h3>
            </div> 
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="btn-group btn-group-justified btn-group-raised">
                <a href="@Url.Action("EditUser", new {id = Model.User.UID})" class="btn btn-primary">Rediger</a>
                <a href="@Url.Action("DeleteUser", new { id = Model.User.UID })" class="btn btn-primary">Slet</a>
            </div>
        </div>
        <div class="col-sm-4">
            @if (Model.User.IsActive) {
                <h4><span class="label label-success">Bruger er aktiv</span></h4>
            } else {
                <h4><span class="label label-default">Bruger er ikke aktiv</span></h4>
            }

            @if (Model.User.IsAdmin) {
                <h4><span class="label label-success">Bruger er administrator</span></h4>
            } else {
                <h4><span class="label label-default">Bruger er ikke administrator</span></h4>
            }
        </div>
    </div>
</div>
