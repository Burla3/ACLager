@using ACLager.Models
@model ACLager.ViewModels.UserViewModel


@using (Html.BeginForm("CreateUser", "User")) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="col-md-6">
            <div class="row">
                <h2>Opret ny bruger</h2>
            </div>
                
            <div class="row">

                @Html.Partial("_UserForm", Model.User)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" class="btn btn-default">Fortryd</button>
                        <input type="submit" value="Opret" class="btn btn-default"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
