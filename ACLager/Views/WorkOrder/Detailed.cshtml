@using ACLager.Models
@model ACLager.ViewModels.WorkOrderBaseViewModel

@{
    ViewBag.Title = "Workorder detaljeret";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container panel">
    <div class="row">
        <div class="col-sm-4">
            <a href="@Url.Action("Production")" class="btn btn-default pull-left"><i class="material-icons">arrow_back</i>Tilbage til "Production"</a>
        </div>
        <div class="col-sm-8">
            <h3 class="text-center">Workorder detaljer</h3>
        </div>
    </div>


    <div class="clearfix"></div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <small>Shipping Info:</small>
            <h1>@Model.Workorder.ShippingInfo</h1>
        </div>
        <div class="col-sm-4">
            <div class="col-sm-6">
                <small>Workorder ID</small> <h3>@Model.Workorder.UID</h3>
            </div>
            <div class="col-sm-6">
                <small>Batchnummer:</small> <h3>@Model.Workorder.BatchNumber</h3>
            </div>
        </div>
    </div>
    <div class="container list" id="ExpansionPanelsContainer">
        @foreach (WorkOrderItem workorderitem in Model.Workorderitems){
            if(workorderitem.WorkOrder == Model.Workorder){ 
                
                <div class="expansionpanel row panel">
                    <div class="col-sm-8">
                        <h3>@workorderitem.ItemType.Name</h3>
                    </div>
                </div>
            }
        }
    </div>
</div>
