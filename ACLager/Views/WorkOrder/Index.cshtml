@using ACLager.Models
@model ACLager.ViewModels.WorkOrderViewModel


@{
    ViewBag.Title = "Arbejdsopgaver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="workorderSort">
    @Html.Partial("_SearchPanel")


        <div class="row">
            <div class="sort noselect col-sm-1 text-center" data-sort="sort-uid">
                @Html.DisplayFor(model => model.Workorder.UID)
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-batchnumber">
                @Html.DisplayFor(model => model.Workorder.BatchNumber)
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-shippinginfo">
                @Html.DisplayFor(model => model.Workorder.ShippingInfo)
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="sort noselect col-sm-2 text-center" data-sort="sort-duedate">
                @Html.DisplayFor(model => model.Workorder.DueDate)
                <br>
                <span class="label label-default">Klik for at sortere</span>
                <span class="label label-primary asc">Sorteret stigende</span>
                <span class="label label-primary desc">Sorteret faldende</span>
                <br>
            </div>
            <div class="col-sm-2"></div>
        </div>


    <div class="list" id="ExpansionPanelsContainer">
        @foreach (WorkOrder workorder in Model.Workorders) {
            <div class="expansionpanel row panel">
                <div class="row">
                    <div class="col-sm-2 sort-UID">
                        @workorder.UID
                    </div>
                    <div class="col-sm-2 sort-batchnumber">
                        @workorder.BatchNumber
                    </div>
                    <div class="col-sm-2 sort-shippinginfo">
                        @workorder.ShippingInfo
                    </div>
                    <div class="col-sm-2 sort-duedate">
                        @workorder.DueDate
                    </div>
                    <div class="expansion-control col-sm-2" data-expandmaxheight="100px" data-expandtarget="#ExpansionContentContainer_@workorder.UID">
                        <div class="btn btn-default pull-right">
                            <i class="material-icons">expand_more</i>
                            <i class="material-icons hidden">expand_less</i>
                        </div>
                    </div>
                </div>
                <div class="row expansion-content" id="ExpansionContentContainer_@workorder.UID">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-5">

                        <a href="@Url.Action("Detailed", new {id = workorder.UID})" class="btn btn-raised btn-primary">Mere info</a>
                        <a href="@Url.Action("EditWorkOrder", new {id = workorder.UID})" class="btn btn-raised btn-info">Rediger</a>
                        <a href="@Url.Action("CancelWorkOrder", new {id = workorder.UID})" class="btn btn-raised btn-danger">Slet</a>

                    </div>

                </div>

            </div>
        }
    </div>
</div>

<script type="text/javascript">

        $(document).ready(function () {

            var options = {
                valueNames: ['sort-UID', 'sort-batchnumber', 'sort-shippinginfo', 'sort-duedate']
            };

            var workorderList = new List('workorderSort', options);


        });
</script>